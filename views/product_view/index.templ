package product_view

import (
	"fmt"
	"strings"

	"bajscheme/models"
	"bajscheme/views/layout"
)

templ ProductViewList(titlePage string,  product_views []models.ProductView) {
	<div class="flex justify-between max-w-2xl mx-auto border-b border-b-slate-600 mb-8 pb-2">
		<h1 class="text-2xl font-bold text-center">
			{ strings.Trim(titlePage, "| ") }
		</h1>
		<a hx-swap="transition:true" class="btn btn-info p-4 hover:scale-[1.1]" href="/product_view/create">
			New
		</a>
	</div>
	<section class="overflow-auto max-w-2xl max-h-96 mx-auto bg-slate-600 rounded-lg shadow-xl">
		<table class="table table-zebra">
			<!-- head -->
			<thead class="bg-slate-700">
				<tr>
					<th></th>
					<th class="text-center">Product Id</th>
<th class="text-center">Customer Id</th>

					<th class="text-center">Options</th>
				</tr>
			</thead>
			if len(product_views) != 0 {
				<tbody>
					for _, product_view := range product_views {
						<tr>

                            <td>{fmt.Sprintf("%s",product_view.ProductID)} </td>\n<td>{fmt.Sprintf("%s",product_view.CustomerID)} </td>\n
							<td class="flex justify-center gap-2">
								<a
 									hx-swap="transition:true"
 									href={ templ.URL(fmt.Sprintf("/product_view/edit/%d", product_view.ProductID)) }
 									class="btn btn-primary p-3 hover:scale-[1.1]"
								>
									Edit
								</a>
								<button
 									hx-swap="transition:true"
 									hx-delete={ fmt.Sprintf("/product_view/delete/%d", product_view.ProductID) }
 									hx-confirm={ fmt.Sprintf("Are you sure you want to delete the product_view with ID #%d?", product_view.ProductID) }
 									hx-target="body"
 									class="btn btn-error p-3 hover:scale-[1.1]"
								>
									Delete
								</button>
							</td>
						</tr>
					}
				</tbody>
			} else {
				<tbody>
					<tr>
						<td colspan="4" align="center">
							product_view is empty
						</td>
					</tr>
				</tbody>
			}
		</table>
	</section>
}

templ ProductViewIndex(
    title,
    username string,
    fromProtected bool,
    isError bool,
	errMsgs, sucMsgs []string,
    cmp templ.Component,
    ) {
	@layout.Base(title, username, fromProtected, isError, errMsgs, sucMsgs) {
		@cmp
	}
}
